@model ALFMovers.Models.Truck

@{
    ViewBag.Title = "Details";
}

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Truck Details</h3>

            </div>
            <div class="box-body">
                <label>Plate Number of the Truck: </label><br />
                @Html.DisplayFor(model => model.TruckPlateNo)<br /><br />
                <label>Model of the Truck: </label><br />
                @Html.DisplayFor(model => model.TruckModel)    <br />      <br />
                <label>Number of Capcity(kg):</label><br />
                @Html.DisplayFor(model => model.Capacity)    <br />   <br />
                <label>Truck Added:</label><br />
                @Html.DisplayFor(model => model.TruckAdded)      <br />  <br />
                <label>Status of the Truck:</label><br />
                @Html.DisplayFor(model => model.Status)<br /><br />
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <div class="pull-right">
                    <a href="@Url.Action("Index","Truck")" type="button" class="btn btn-primary">Back</a>
                </div>
            </div>
            <!-- /.box-footer-->
        </div>
        <!-- /.box -->

    </section>
    <!-- /.content -->
</div>