@model IEnumerable<ALFMovers.Models.Employee>
@Layout
@{
    ViewBag.Title = "Index";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-body">
                        <div class="box-header with-border">
                            <h3 class="box-title"><strong>ALF Employees</strong></h3>
                        </div>
                  
                        <table id="emp" class="table table-bordered table-hover col-md-6">
                                <thead>
                                    <tr role="row">
                                        <th>First Name</th>
                                        <th>Last Name</th>
                                        <th>Position</th>
                                        <th>Contact</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.EmpFName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.EmpLName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Position)</td>
                                            <td>@Html.DisplayFor(modelItem => item.EmpContact)</td>
                                            <td>
                                                <a href="/Employee/Details/@Html.DisplayFor(modelItem => item.EmpID)" type="button" class="btn btn-md btn-success"><i class="fa fa-eye"></i></a>
                                                <a href="/Employee/EditEmployee/@Html.DisplayFor(modelItem => item.EmpID)" type="button" class="btn btn-md btn-success"><i class="fa fa-pencil-square-o"></i></a>
                                                <a href="/Employee/Delete/@Html.DisplayFor(modelItem => item.EmpID)" type="button" class="btn btn-md btn-success"><i class="fa fa-trash"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        <div class="pull-right">
                            <br />
                            <a href="@Url.Action("Create","Employee")" type="button" class="btn btn-md btn-success">Add New Employee</a>
                        </div>

                    </div>
                    <!-- /.box-body -->

                </div>
                <!-- /.box -->
            </div>
        </div>
    </section>
</div>