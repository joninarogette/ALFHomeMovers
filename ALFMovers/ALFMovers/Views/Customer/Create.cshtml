@model ALFMovers.Models.Customer

@{ 
    Layout = null;
}
@{
    ViewBag.Title = "Create";
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>ALF Home Movers Services</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Content/CPage/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/Content/CPage/css/business-casual.css" rel="stylesheet">

</head>

<body>

    <div class="tagline-upper text-center text-heading text-shadow text-white mt-5 d-none d-lg-block">ALF Home Movers Services</div>
    <div class="tagline-lower text-center text-expanded text-shadow text-uppercase text-white mb-5 d-none d-lg-block">2330 Roxas Boulevard, Pasay City | 268-09-87 | 0912-1234-098</div>
    <div class="container">

        <div class="bg-faded p-4 my-4">
            <!-- Welcome Message -->
            <div class="text-center mt-4">
                <section class="content">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <!-- left column -->
                            <div class="col-md-12">
                                <!-- general form elements -->
                                <div class="box box-primary">

                                    <!-- form start -->
                                    <form role="form">
                                        <div class="box-body">

                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            <div class="form-group">
                                                <label><strong>Full Name</strong></label>
                                                <div class="col-md-12">
                                                    @Html.EditorFor(model => model.CustName, new { htmlAttributes = new { @class = "form-control", @id = "Customer", placeholder = "Enter Full Name" }})
                                                    @Html.ValidationMessageFor(model => model.CustName, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label><strong>Contact Number</strong></label>
                                                <div class="col-md-12">
                                                    @Html.EditorFor(model => model.CustContact, new { htmlAttributes = new { @class = "form-control", @id = "Contact", placeholder = "Enter Contact Number" } })
                                                    @Html.ValidationMessageFor(model => model.CustContact, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label><strong>Address</strong></label>
                                                <div class="col-md-12">
                                                    @Html.EditorFor(model => model.FromAddrss, new { htmlAttributes = new { @class = "form-control", @id = "Address", placeholder = "Enter Pick-up Address" } })
                                                    @Html.ValidationMessageFor(model => model.FromAddrss, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label><strong>Destination Address</strong></label>
                                                <div class="col-md-12">
                                                    @Html.EditorFor(model => model.ToAddrss, new { htmlAttributes = new { @class = "form-control", @id = "Destination", placeholder = "Enter Destination Address" } })
                                                    @Html.ValidationMessageFor(model => model.ToAddrss, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label><strong>Scheduled Date</strong></label>
                                                <div class="col-md-12">
                                                    @Html.EditorFor(model => model.SchedDate, new { htmlAttributes = new { @class = "form-control", @id = "sched", placeholder = "Enter Scheduled Date" } })
                                                    @Html.ValidationMessageFor(model => model.SchedDate, "", new { @class = "text-danger" })
                                                </div>
                                            </div>


                                            <div class="form-group">
                                                <div class="pull-right">
                                                    <input type="submit" value="Request Service" class="btn btn-primary" />
                                                    <input type="button" id ="reset" value="Clear" class="btn btn-primary" />
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                    }
                </section>
            </div>
        </div>
    </div>
</body>

</html>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/myjquery.js"></script>