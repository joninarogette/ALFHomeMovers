    Layout = null;
}
@{
    ViewBag.Title = "Create";
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>ALF Home Movers Services</title>

    <!-- Bootstrap core CSS -->
    <link href="../Content/CPage/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="../Content/CPage/css/business-casual.css" rel="stylesheet">

</head>

<body>

    <div class="tagline-upper text-center text-heading text-shadow text-white mt-5 d-none d-lg-block">ALF Home Movers Services</div>
    <div class="tagline-lower text-center text-expanded text-shadow text-uppercase text-white mb-5 d-none d-lg-block">2330 Roxas Boulevard, Pasay City | 268-09-87 | 0912-1234-098</div>
    <div class="container">

        <div class="bg-faded p-4 my-4">
            <!-- Welcome Message -->
            <div class="text-center mt-4">
                <section class="content">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <!-- left column -->
                            <div class="col-md-12">
                                <!-- general form elements -->
                                <div class="box box-primary">

                                    <!-- form start -->
                                    <form role="form">
                                        <div class="box-body">
                                            <img src="~/Content/img/OKAY.png" width="200" height="150"><br />
                                            <h4><strong>REQUEST SERVICE SUCCESS!</strong></h4>
                                            Please wait for a call from our agent to verify that your request of our service will be processed.
                                            Thank you for your trust and support.
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                    }
                </section>
            </div>
        </div>
    </div>
</body>

</html>

